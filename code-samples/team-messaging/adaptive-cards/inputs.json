{
    "attachments": [
	{
	    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
	    "type": "AdaptiveCard",
	    "version": "1.3",
	    "body": [
		{
		    "type": "Input.Text",
		    "placeholder": "Input a string",
		    "id": "text"
		},
		{
		    "type": "Input.Number",
		    "placeholder": "Input a number",
		    "id": "number"
		},
		{
		    "type": "Input.Date",
		    "id": "date"
		},
		{
		    "type": "Input.Time",
		    "id": "time"
		},
		{
		    "type": "Input.ChoiceSet",
		    "choices": [
			{
			    "title": "Choice 1",
			    "value": "Choice 1"
			},
			{
			    "title": "Choice 2",
			    "value": "Choice 2"
			}
		    ],
		    "placeholder": "Select a menu item",
		    "style": "expanded",
		    "id": "menu"
		},
		{
		    "type": "Input.Toggle",
		    "title": "This is a checkbox",
		    "id": "toggle"
		}
	    ]
	}
    ]
}
